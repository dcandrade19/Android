<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/spFilme" android:layout_weight="1"
                android:background="@color/colorPrimaryDark"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[2]"
                android:id="@+id/imgFilme" android:layout_weight="1" android:contentDescription="@string/descFilme"
                android:scaleType="fitCenter" android:adjustViewBounds="true" android:padding="10dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtFilme" android:layout_weight="1"
                android:padding="10dp"/>
    </LinearLayout>
</ScrollView>